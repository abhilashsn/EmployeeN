


.container
  %h3 New Employee
  = form_for @employee do |f|
    - if @employee.errors.any?
      %ul
        - for msg in @employee.errors.full_messages
          %li= msg

    .form-group.col-xs-6
      %label.col-xs-12 Name
      = f.text_field :name
      %br/
    .form-group.col-xs-6
      %label.col-xs-12 Date of Birth
      = f.date_field :date_of_birth
      %br/
    .form-group.col-xs-6
      %label.col-xs-12  Gender
      %br/
      = f.radio_button(:gender, "female", :checked => (:gender == 'female')? true:false)
      Female
      \#{f.radio_button(:gender, "male", :checked => (:gender == 'male')? true:false)}Male
      %br/
    .form-group.col-xs-6
      %label.col-xs-12  Date of Joining
      = f.date_field :date_of_joining
      %br/
    .form-group.col-xs-6
      %label.col-xs-12 Address
      = f.text_area :address
      %br/
    .form-group.col-xs-6
      %label.col-xs-12 State
      %br/
      = f.collection_select :state_id, State.all, :id, :name, prompt: "select state"
      %br/
      %br/

    .form-group
      = f.submit value: "Save Employees",class: "btn btn-primary", onclick:'return ValidateEmployee();'

