





<%= form_for [@leave_allotment,@leave_apply] do |f| %>
  
  
  
<div class="form-group">
  <label>Select paymonth:</label>
  <%= f.collection_select :name , PayMonth.all, :name , :name%>
  </div>


  <% for leave_head in @leave_heads%> 
  <br>
  <label><%=leave_head.name%></label>
  <%= f.text_field :head_values, multiple:true%>
  <%end%>




  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
